<div class="container text-white" style="--maxw:540px; --pb:15;">
    <div class="row">
        <div class="col tac" style="--pb:15;">
            <h1 style="--fw:900;">Favorites Vault</h1>
        </div>
    </div>
    <div class="row">
        <div class="col border-secondary rounded bg-l1 p-4">
            <h2 style="--fw:700;">Update Password</h2>
            <form class="form">
                <div class="form-group d-flex flex-column rounded p-3 bg-d2">
                    <label for="email-login">Validation token:</label>
                    <input class="form-input mb-2" type="text" id="validation-input" required />
                    <button class="btn btn-sm rounded border" style=" --fw:700;" onclick="window.location.href='/forgotpwform'" type="button">Request new Token</button>
                </div>
                <div class="form-group d-flex flex-column rounded p-3 bg-d2">
                    <label for="email-login">Email:</label>
                    <input class="form-input" type="text" id="email" required />
                </div>
                <div class="form-group d-flex flex-column rounded p-3 bg-d2">
                    <label for="email-login">New password:</label>
                    <input class="form-input" type="password" id="new-password" required />
                </div>
                <div class="form-group d-flex flex-column rounded p-3 bg-d2">
                    <label for="email-login">Repeat New password:</label>
                    <input class="form-input" type="password" id="repeat-new-password" required />
                </div>
                <div class="form-group d-flex flex-column" style="--g:3;">
                    <button class="btn btn-primary"  onclick="updatePassword(event)" type="button">Update Password</button>
                    <button class="btn border"  onclick="window.location.href='/login'" type="button">Login</button>
                    <button class="btn border" onclick="window.location.href='/signup'" type="button">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script >
    $(document).ready(() => {
        showMessageInModal("Please check your email inbox or spam folder for the validation token. <br>If you don't see it, request the token again please.")
    });
</script>


