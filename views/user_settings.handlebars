<section class="container-fluid d-flex flex-column p-0" style="--minh:100vh;">
    <div class="row px-3" style="--pt:15;">
        <div class="col-12 d-flex flex-column bg-d2 rounded py-2 mb-3" style="--g:3;">
            <h3>User Info</h3>
            <div class="d-flex aic bg-d2 p-2" style="--g:3; --ch-m:0;">
                <h4 style="--fs:20px;">User Name:</h4>
                <p class="rounded px-2 bg-l1" style="--fs:20px;">{{currUser.name}}</p>
            </div>
            <div class="d-flex aic bg-d2 p-2" style="--g:3; --ch-m:0;">
                <h4 style="--fs:20px;">User Email:</h4>
                <p id="email" class="rounded px-2 bg-l1" style="--fs:20px;">{{currUser.email}}</p>
            </div>
        </div>
        <div class="col-12 d-flex flex-column bg-d2 rounded py-2" style="--g:3;">
            <h3>Account Settings</h3>
            <div class="d-flex aic bg-d2 p-2" style="--g:3; --ch-m:0;">
                <button class="btn text-white bg-primary" onclick="loadPasswordForm(event)">Update password</button>
            </div>
        </div>
    </div>
</section>