<div class="container text-white">
    <div class="row">
        <div class="col tac" style="--pb:18;">
            <h1 style="--fw:900;">Favorites Vault</h1>
        </div>
    </div>
    <div class="row">
        <div class="col border rounded pt-3" style="--bg-l:.1;">
            <h2 style="--fw:700;">Login</h2>
            <form class="form login-form">
                <div class="form-group d-flex flex-column border rounded p-2">
                    <label for="email-login">Email:</label>
                    <input class="form-input border bg-d1" type="text" id="email-login" autocomplete="email" required />
                </div>
                <div class="form-group d-flex flex-column border rounded p-2">
                    <label for="password-login">Password:</label>
                    <input class="form-input border bg-d1" type="password" id="password-login" autocomplete="current-password" required />
                </div>
                <div class="form-group d-flex flex-column border rounded p-2" style="--g:2;">
                    <button class="btn rounded bg-ac1" style="--bg-d:.1; --fw:700;" type="submit">Login</button>
                    <button class="btn rounded bg-ac1" style="--bg-d:.1; --fw:700;" onclick="window.location.href='/forgotpwform'" type="button">Forgot Password</button>
                    <button class="btn rounded bg-ac1" style="--bg-d:.1; --fw:700;" onclick="window.location.href='/signup'" type="button">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>